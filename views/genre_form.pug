extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Action, Fighting, First-person Shooter, etc.' name='name' value=(undefined===genre ? '' : genre.name) required)
    if errors
      ul
        for error in errors
          li!= error.msg
    button.btn.btn-primary(type='submit') Submit