extends layout

block content
  h1 #{title}: #{platform.name}

  if platform_games.length

    p #[strong Delete the following games before attempting to delete this platform.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Games

      dl
      each game in platform_games
        dt
          a(href=game.url) #{game.title}
        dd #{game.description}

  else
    p Do you really want to delete this Platform?

    form(method='POST' action='')
      div.form-group
        input#platformid.form-control(type='hidden',name='platformid', required='true', value=platform._id )
      div.form-group
        label(for='admin-password') Admin Password:
        input#admin-password.form-control(type='password' name='admin-password' required)

      if errors
        ul
          for error in errors
            li!= error.msg

      button.btn.btn-primary(type='submit') Delete