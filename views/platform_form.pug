extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Platform:
      input#name.form-control(type='text', placeholder='Nintendo 64, PlayStation, Xbox, etc.' name='name' value=(undefined===platform ? '' : platform.name))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg