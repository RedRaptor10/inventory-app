extends layout

block content
  h1 #{title}: #{genre.name}

  if genre_games.length

    p #[strong Delete the following games before attempting to delete this genre.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Games

      dl
      each game in genre_games
        dt
          a(href=game.url) #{game.title}
        dd #{game.description}

  else
    p Do you really want to delete this Genre?

    form(method='POST' action='')
      div.form-group
        input#genreid.form-control(type='hidden',name='genreid', required='true', value=genre._id )
      div.form-group
        label(for='admin-password') Admin Password:
        input#admin-password.form-control(type='password' name='admin-password' required)

      if errors
        ul
          for error in errors
            li!= error.msg

      button.btn.btn-primary(type='submit') Delete