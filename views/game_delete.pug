extends layout

block content
  h1 #{title} #{game.title}

  div(class='form-inline')
    div.game
      a(href=game.url)
        div.game-poster-container
          if game.posterId
            img(class='game-poster' src='/uploads/' + game.posterId alt=game.title)
          else
            div(class='game-poster-empty')
              span #{game.title}

    div.delete-prompt
      p Do you really want to delete this Game?

      form(method='POST' action='')
        div.form-group
        input#gameid(type='hidden' name='gameid' required value=game._id)
        div.form-group
            label(for='admin-password') Admin Password: 
            input#admin-password.input-block(type='password' name='admin-password' required)

        if errors
          ul(class='errors')
            for error in errors
              li!= error.msg

        button(class='btn user-btn form-btn' type='submit') Delete